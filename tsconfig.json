{
  "include": ["packages/**/*.ts", "app/**/*.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["svelte", "node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@pkg/*": ["packages/*/src"]
    }
  }
}
